{
  "name": "proxima-backend",
  "version": "1.0.0",
  "description": "TS/Koa/TypeORM",
  "scripts": {
    "lint": "eslint --config .eslintrc --ext .jsx,.js,.ts,.tsx src/",
    "lint:fix": "eslint --fix --config .eslintrc --ext .jsx,.js,.ts,.tsx src/",
    "build": "tsc",
    "serve": "ts-node src/server.ts",
    "dev": "nodemon",
    "start": "ts-node src/server.ts NODE_ENV=production",
    "test": "NODE_ENV=test node_modules/mocha/bin/mocha -r ts-node/register ./test/**/*.spec.ts && exit 0",
    "coverage": "NODE_ENV=test node_modules/nyc/bin/nyc.js --reporter=html --reporter=text node_modules/mocha/bin/mocha --exit -r ts-node/register ./test/**/*.spec.ts",
    "coverage:coveralls": "NODE_ENV=test node_modules/nyc/bin/nyc.js --reporter=lcov --reporter=text-lcov node_modules/mocha/bin/mocha --exit -r ts-node/register ./test/**/*.spec.ts | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VandyHacks/proxima"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://gitlab.com/Chapabu/ts-koa-typeorm#readme",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa__cors": "^3.0.2",
    "http-status-codes": "^1.3.0",
    "koa": "^2.6.1",
    "koa-body": "^4.2.0",
    "koa-bodyparser": "^4.2.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "pg": "^7.5.0",
    "reflect-metadata": "^0.1.12",
    "smtp-client": "^0.3.3",
    "typeorm": "^0.2.29",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/chai-http": "^4.2.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.2",
    "@types/koa-router": "^7.0.32",
    "@types/mocha": "^8.2.0",
    "@types/node": "^10.12.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.2",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1"
  }
}
